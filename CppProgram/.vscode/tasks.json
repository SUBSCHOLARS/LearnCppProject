{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                // ${fileDirname}/*.cppとすることで、同一ディレクトリ内にある全てのcpp拡張子を持つファイルをコンパイルするという命令になる
                "${fileDirname}/*.cpp",
                "-o",
                // ${fileDirnameBasename}-${fileBasenameNoExtension}とすることで、出力ファイルが親フォルダ名-ファイル名となる。
                "${workspaceFolder}/build/${fileDirnameBasename}-${fileBasenameNoExtension}",
                "-std=c++17",
                "-stdlib=libc++"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "コンパイラ: /usr/bin/clang++"
        }
    ],
    "version": "2.0.0"
}